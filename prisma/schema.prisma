generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// 1. Bảng Người dùng (Phục vụ chức năng Đăng nhập/Đăng ký)
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Lưu hash password, không lưu plain text
  fullName  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Quan hệ: Một user có thể thực hiện nhiều hành động
  actions   ActionLog[]
  sensorData   SensorData[]
}

model SensorData {
  id           Int      @id @default(autoincrement())
  timestamp    DateTime @default(now())
  
  temperature  Float? 
  humidity     Float? 
  soilMoisture Int?   
  lightLevel   Int?   
  waterLevel   Int?

  userId      String?
  user        User?    @relation(fields: [userId], references: [id])

  @@index([timestamp]) // Đánh index để query vẽ biểu đồ cho nhanh
}

model ActionLog {
  id          Int      @id @default(autoincrement())
  timestamp   DateTime @default(now())
  
  type        String // TỰ ĐỘNG hay THỦ CÔNG
  action      String     // Ví dụ: "BẬT_BƠM_1", "TẮT_BƠM_2", "CHE_NẮNG"
  details     String?    // Chi tiết (vd: "Tưới do độ ẩm đất < 30%")
  
  // Quan hệ với User (nếu là hành động thủ công)
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
}

model SystemConfig {
  key         String   @id
  value       String
  description String?
}